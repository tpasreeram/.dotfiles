# Aliases
alias ls="eza --group-directories-first"
# alias ls='ls --color=auto -a'
alias la='eza -lah'
alias cat="bat"
alias du="dust"
alias cd="z"
alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -iv'
alias ln='ln -v'
alias mkdir='mkdir -vp'
alias grep='rg -uuu'
alias cl="clear"
alias df="df -h"
alias tree="eza -aT --color=always --icons"
alias gtree="eza -aT --color=always --icons --git-ignore"
alias glog="git log --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset' --date=short"
alias gst="git status"
alias nv='nvim'
alias nvchad='NVIM_APPNAME=nvim-nvchad nvim'
alias open="sh ~/scripts/launch.sh"
alias exitdwm="sh ~/scripts/exitmenu.sh"
alias update-grub="sudo grub-mkconfig -o /boot/grub/grub.cfg"
alias dotfiles='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
